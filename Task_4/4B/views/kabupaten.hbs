<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../data/image/logo.png">
    <title>Kabupaten</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="../data/hover.css">
</head>

<body class="bg-dark">
    <!-- Start Navbar -->

    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fs-3 text-info ms-3 my-2 icon-link icon-link-hover" style="--bs-link-hover-color-rgb: 25, 135, 84;" href="/"> <i
                    class="fa-solid fa-arrow-left-long mx-3 bi"></i>Back</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mt-3" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {{!-- <li class="nav-item">
                        <a class="nav-link active text-info" aria-current="page" href="#">Home</a>
                    </li> --}}
                </ul>
                <a class="btn btn-outline-info me-2 text-info nav-hover" style="width: 150px;" href="/provinsi">Add Provinsi</a>
            </div>
        </div>
    </nav>

    <!-- End Navbar -->
    <!-- Pop UP  -->

    {{#if messages.success}}
    <div class="alert alert-success d-flex fw-bold justify-content-between" role="alert">
        {{messages.success}}
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    {{#if messages.projectSuccess}}
    <div class="alert alert-info d-flex fw-bold justify-content-between" role="alert">
        {{messages.projectSuccess}}
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <!-- Pop UP  -->
    <!-- Start Project Form -->

    <form action="/kabupaten" method="POST" enctype="multipart/form-data" class="form pb-5 mb-5" id="form" autocomplete="off">
        <h1 class="text-center fw-semibold text-info">Add Kabupaten</h1>
        <div class="w-50 m-auto fs-5 fw-bold text-info">
            <div class="mb-4 mt-5">
                <label for="kabupaten" class="form-label">Nama Kabupaten</label>
                <input type="text" class="form-control" id="kabupaten" name="kabupaten">
            </div>
            <div class="col mb-4">
                <label for="diresmikan">Diresmikan</label>
                <input type="date" class="form-control" id="diresmikan" name="diresmikan">
            </div>
            <div class="mb-4 mt-4">
                <label for="inputSelect" class="form-label">Pulau</label>
                <select class="form-select" id="inputSelect" name="pulau" aria-label="Floating label select example">
                    <option hidden>Provinsi</option>
                    {{#each data}}
                    <option value="{{this.nama}}">{{this.nama}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label for="inputImage" class="form-label">Upload Image</label>
                <input class="form-control" type="file" id="inputImage" name="image">
            </div>
            <button class="btn btn-dark border-info float-end fw-bold my-3 px-4 rounded-pill submit text-info add-hover">Add Kabupaten</button>
        </div>
    </form>

    <!-- End Project Form -->
    <!-- Start Script -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="../data/js/time.js"></script>

    <!-- End Script -->
</body>

</html>